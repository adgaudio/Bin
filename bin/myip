
myip=`wget -q -O- http://checkip.dyndns.com/ | tr -d [\<\>A-z\/\ \:\^]`
oldip=`cat ./myoldip | tail -1 | cut -d" " -f1`

if [ "$oldip" != "$myip" ] 
then

	echo "Subject: gaudiosonline new IP $myip
$myip has changed.  It used to be $oldip"|
	sendmail adgaudio@gmail.com

	echo "$myip at " `date` >> ./myoldip
	echo $myip
fi

